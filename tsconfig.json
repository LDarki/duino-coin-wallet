{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es2022",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "skipLibCheck": true,
    "paths": {
      "*": [".snowpack/types/*"],
      "@app": ["src"]
    }
  },
  "include": ["src/**/*", "types"]
}
